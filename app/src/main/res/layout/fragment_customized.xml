<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerCustomized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/squareIndicator"
        />

    <com.ugurtekbas.fadingindicatorlibrary.FadingIndicator
        android:id="@+id/squareIndicator"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/viewpagerDefault"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:fillColor="@color/strokeColor"
        app:strokeColor="@color/colorPrimary"
        app:shape="Rectangle"
        app:radius="10dp"
        />

</android.support.constraint.ConstraintLayout>